<Page x:Class="MathieuShopKornilova.Pages.AutharizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathieuShopKornilova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutharizationPage">

    <Grid Background="AliceBlue" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="20" HorizontalAlignment="Center">Авторизация</TextBlock>
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginTb" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock>Пароль</TextBlock>
                <TextBox x:Name="PasswordTb" Width="150"></TextBox>
            </StackPanel>
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
            
            <Button x:Name="RegistrationBtn" Click="RegistrationBtn_Click">Регитсрация</Button>
        </StackPanel>

    </Grid>
</Page>
